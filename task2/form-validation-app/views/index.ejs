<!DOCTYPE html>
<html>
<head>
  <title>Form Validation</title>
</head>
<body style="font-family: Arial; padding: 20px; background-color: #f0f0f0;">
  <h2>Submit Your Info</h2>
  <form action="/submit" method="POST" onsubmit="return validateForm()" style="max-width: 400px;">
    <label>Name:</label><br>
    <input type="text" name="name" id="name" style="width: 100%; margin-bottom: 10px;"><br>

    <label>Email:</label><br>
    <input type="email" name="email" id="email" style="width: 100%; margin-bottom: 10px;"><br>

    <label>Age:</label><br>
    <input type="number" name="age" id="age" style="width: 100%; margin-bottom: 10px;"><br>

    <label>Gender:</label><br>
    <select name="gender" id="gender" style="width: 100%; margin-bottom: 10px;">
      <option value="">Select</option>
      <option>Male</option>
      <option>Female</option>
      <option>Other</option>
    </select><br>

    <button type="submit" style="padding: 10px 20px;">Submit</button>
  </form>

  <script>
    function validateForm() {
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const age = document.getElementById('age').value;
      const gender = document.getElementById('gender').value;

      if (!name || !email || !age || !gender) {
        alert("All fields are required.");
        return false;
      }

      if (age < 1 || age > 120) {
        alert("Please enter a valid age.");
        return false;
      }

      return true;
    }
  </script>
</body>
</html>